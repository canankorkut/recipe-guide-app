<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ScrollPane?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.recipeguide.recipeguideapp.HelloController" stylesheets="@css/styles.css">

  <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #FF6347;" prefWidth="250" maxWidth="250">
    <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>
    <ImageView fx:id="logoImageView" fitHeight="160" fitWidth="160" pickOnBounds="true" preserveRatio="true" />
    <Region prefHeight="20"/>
    <Button text="Add Recipe" onAction="#onAddRecipe"/>
  </VBox>

  <VBox alignment="TOP_CENTER" spacing="10" style="-fx-background-color: #FFFFFF;" prefWidth="774" maxWidth="Infinity">
    <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <HBox spacing="10">
      <TextField fx:id="searchField" promptText="Enter search term..."/>
      <Button fx:id="searchByRecipeButton" text="Search by Recipe" onAction="#onSearchByRecipe"/>
      <Button fx:id="searchByIngredientButton" text="Search by Ingredient" onAction="#onSearchByIngredient"/>
    </HBox>

    <Label text="Format: Malzeme Adı  (örnek: 'Domates, Patates, ...')" style="-fx-text-fill: #555555; -fx-font-size: 12px;"/>

    <!-- Filtreleme Seçenekleri -->
    <HBox spacing="10">
      <!-- Kategoriye Göre Filtreleme -->
      <ComboBox fx:id="categoryFilter" promptText="Select Category">
        <items>
          <FXCollections fx:factory="observableArrayList">
            <String fx:value="Ana Yemek"/>
            <String fx:value="Tatlı"/>
            <String fx:value="Salata"/>
            <String fx:value="Çorba"/>
            <String fx:value="Atıştırmalık"/>
          </FXCollections>
        </items>
      </ComboBox>

      <!-- Maliyet Aralığına Göre Filtreleme -->
      <ComboBox fx:id="costFilter" promptText="Select Cost Range">
        <items>
          <FXCollections fx:factory="observableArrayList">
            <String fx:value="Düşük (0-200 TL)"/>
            <String fx:value="Orta (200-500 TL)"/>
            <String fx:value="Yüksek (500-1000 TL)"/>
          </FXCollections>
        </items>
      </ComboBox>

      <!-- Malzeme Sayısına Göre Filtreleme -->
      <ComboBox fx:id="ingredientCountFilter" promptText="Select Ingredient Count">
        <items>
          <FXCollections fx:factory="observableArrayList">
            <String fx:value="Az (1-3)"/>
            <String fx:value="Orta (4-6)"/>
            <String fx:value="Çok (7+)"/>
          </FXCollections>
        </items>
      </ComboBox>

      <Button fx:id="filterButton" text="Filter" onAction="#onFilter"/>
    </HBox>

    <!-- Sıralama Seçenekleri -->
    <HBox spacing="10">
      <ComboBox fx:id="prepTimeCombo" promptText="Prep Time">
        <items>
          <FXCollections fx:factory="observableArrayList">
            <String fx:value="En hızlıdan yavaşa"/>
            <String fx:value="En yavaştan hızlıya"/>
          </FXCollections>
        </items>
      </ComboBox>

      <ComboBox fx:id="costCombo" promptText="Cost">
        <items>
          <FXCollections fx:factory="observableArrayList">
            <String fx:value="Artan"/>
            <String fx:value="Azalan"/>
          </FXCollections>
        </items>
      </ComboBox>

      <Button fx:id="sortButton" text="Sort" onAction="#onSort"/>
    </HBox>

    <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="310" fitToHeight="true">
      <GridPane fx:id="recipeGrid" hgap="10" vgap="10">
        <padding>
          <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>
      </GridPane>
    </ScrollPane>

    <ScrollPane fx:id="resultsScrollPane" fitToWidth="true" prefHeight="315" fitToHeight="true">
      <GridPane fx:id="resultsGrid" hgap="10" vgap="10">
        <padding>
          <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
        </padding>
      </GridPane>
    </ScrollPane>
  </VBox>

</HBox>
